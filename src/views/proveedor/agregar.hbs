<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
           <div class="card">
                <div class="card-body">
                    <form action="/proveedor/agregar/" method="POST">
                        <div class="form-group">
                            <h4>Agregar Proveedor</h4>
                        </div>
                        <div class="form-group">
                            <input value="" type="text" class="form-control" name="nombre"  placeholder="Nombre del Proveedor" required autofocus>
                        </div>
                        <div class="form-group">
                            <input value="" type="text"  class="form-control" name="direccion" placeholder="Direccion" required>
                        </div>
                        <div class="form-group">
                            <input value="" type="text"  class="form-control" name="telefono" placeholder="Telefono" required >
                        </div>
                        <div class="form-group">
                            <input value="" type="text"  class="form-control" name="ciudad" placeholder="Ciudad">
                        </div>
                        <div class="form-group">
                            <input value="" type="text"  class="form-control" name="sector" placeholder="Sector">
                        </div>

                        <div class="form-group">
                              <button class="btn btn-success btn-block" type="submit">Agregar Proveedor</button>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-light btn-block" type="reset" value="Reset">Reiniciar Valores</button>
                        </div>
                    </form>
                </div>
           </div>
        </div>
    </div>
</div>
