<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
           <div class="card">
                <div class="card-body">
                    <form action="/proveedor/editar/{{proveedor.idProveedor}}" method="POST">
                        <div class="form-group">
                            <h4>Editar Proveedor</h4>
                        </div>
                        <div class="form-group">
                            <input value="{{proveedor.nombre}}" type="text" class="form-control" name="nombre"  placeholder="Nombre del Proveedor" autofocus>
                        </div>
                        <div class="form-group">
                            <input value="{{proveedor.direccion}}" type="text"  class="form-control" name="direccion" placeholder="Direccion">
                        </div>
                        <div class="form-group">
                            <input value="{{proveedor.telefono}}" type="text"  class="form-control" name="telefono" placeholder="Telefono" >
                        </div>
                        <div class="form-group">
                            <input value="{{proveedor.ciudad}}" type="text"  class="form-control" name="ciudad" placeholder="Ciudad" >
                        </div>
                        <div class="form-group">
                            <input value="{{proveedor.sector}}" type="text"  class="form-control" name="sector" placeholder="Sector" >
                        </div>

                        <div class="form-group">
                              <button class="btn btn-success btn-block" type="submit">Editar Proveedor</button>
                        </div>
                    </form>
                </div>
           </div>
        </div>
    </div>
</div>
