<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
           <div class="card">
                <div class="card-body">
                    <form action="/usuarios/editar/{{user.idUsuario}}" method="POST">
                        <div class="form-group">
                            <h4>Editar Usuario</h4>
                        </div>
                        <div class="form-group">
                            <input value="{{user.nombre}}" type="text" class="form-control" name="nombre"  placeholder="Nombre" autofocus required>
                        </div>
                        <div class="form-group">
                            <input value="{{user.apellido}}" type="text"  class="form-control" name="apellido" placeholder="Apellido" required>
                        </div>
                        <div class="form-group">
                            <select name="sexo" class="form-control">
                                <option>Hombre</option>
                                <option>Mujer</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input value="" type="password" class="form-control" name="clave" placeholder="ContraseÃ±a" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="direccion" rows="2" placeholder="{{user.direccion}}" required></textarea>
                        </div>
                        <div class="form-group">
                            <input value="{{user.telefono}}" type="text" class="form-control" name="telefono" placeholder="Telefono" required>
                        </div>
                        <div class="form-group">
                              <button class="btn btn-success btn-block" type="submit">Editar Usuario</button>
                        </div>
                    </form>
                </div>
           </div>
        </div>
    </div>
</div>
