<div class="container-fluid">
    <div class="row mt-5">
        {{#if usuarios}}
        <div class="mx-auto">
            <a href="/perfil" class="btn btn-outline-primary btn-block">Volver</a>
                        <a href="/usuarios/agregar" class="btn btn-outline-success btn-block">Agregar nuevo Usuario</a>
            <hr>
            <table id="tabla" class="table table-bordered table-hover table-sm">
                <h4 class="text-center">Usuarios</h4>
                <thead>
                    <tr class="text-center">

                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Sexo</th>
                        <th>Correo</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Nivel</th>
                        <th>Fecha de Inscripci√≥n</th>
                        <th>Opciones</th>
                        {{/if}}
                    </tr>
                </thead>
                <tbody>
                        {{#each usuarios}}

                        <tr>
                            <td>{{idUsuario}}</td>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{sexo}}</td>
                            <td>{{correo}}</td>
                            <td>{{direccion}}</td>
                            <td>{{telefono}}</td>
                            <td>{{Descripcion}}</td>
                            <td>{{timeago fechaInscripcion}}</td>
                            <td>
                                <a href="/usuarios/editar/{{ idUsuario }}" class="btn btn-sm btn-success">Editar</a>
                                <a href="/usuarios/borrar/{{ idUsuario }}" class="btn btn-sm btn-danger">Borrar</a>
                            </td>
                            {{/each}}
                        </tr>
                        {{#else}}
                            <div class="col-md-4 mx-auto">
                                <div class="card card-body text-center">
                                    <p>Aun No Has Creado Ningun Usuario</p>
                                    <a href="/usuarios/agregar" class="btn btn-outline-success">Crear Usuario</a>
                                </div>
                            </div>
                                                    {{/else}}

                </tbody>
            </div>
            </div>
        </div>
    <script type="text/javascript" src="/static/js/scripts.js"></script>         
    <script type="text/javascript">
        $(document).ready( function () {
        tabla();
        });
    </script>
