<script src="/static/js/sb-admin.min.js"></script>
<div class="modal fade" id="modalInfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Informacion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
    <div class="row mt-2">
        {{#if solicitud}}
        <div class="mx-auto">
            <a href="/perfil" class="btn btn-outline-info btn-block">Volver</a>
                        <a href="/solicitud/agregar" class="btn btn-primary btn-block">AÃ±adir nueva Solicitud</a>
            <hr>
            <table id="tabla" class="table table-sm table-bordered table-hover text-justify">
              <h3 class="text-center">Solicitudes Activas</h3>
                <thead>
                    <tr class="table">

                        <th>#</th>
                        <th>Usuario</th>
                        <th>Vehiculo</th>
                        <th>Estado</th>
                        <th>Tipo</th>
                        <th>Referencia</th>
                        <th>Material</th>
                        <th>Color</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                        <th style="font-size: 12px;overflow: initial;text-overflow: initial;">Opciones</th>
                        <th>Bordado</th>
                        <th>Costura</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each solicitud}}
                        <tr>
                            <td name="{{idSolicitud}}">{{idSolicitud}}</td>
                            <td>{{nombre}} {{apellido}}</td>
                            <td>{{placa}}</td>
                            <td>{{fase}}</td>
                            <td>{{descPago}}</td>
                            <td>{{referencia}}</td>
                            <td>{{descrip}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{cantidad}}</td>
                            <td>{{timeago fechaSolicitud}}</td>
                            <td>
                                {{#if estado}}
                                <form action="/solicitud/aprobar/{{idSolicitud}}" method="GET">
                                
                                    <a id="aprobar" data-toggle="modal" data-target="#modalAceptar" name="aprobar" href="/solicitud/aprobar/{{ idSolicitud }}" class="custom-modal badge badge-primary" >Aprobar Solicitud</a>
                                
                                <div class="col">
                                    <!-- Modal -->
                                    <div class="modal fade" id="modalAceptar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                      <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Aprobar Solicitud</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                              <span aria-hidden="true">&times;</span>
                                            </button>
                                          </div>
                                          <div class="modal-body">

                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                            <button type="button submit" class="btn btn-primary">Guardar Cambios</button>
                                          </div>
                                        </div>
                                      </div>
                                    </div>                                    </form>
                                    <form action="/solicitud/cancelar/{{idSolicitud}}" method="GET">
                                        <!--Para recuperar pagos en Admins/gerentes quitar el if-->
                                        
                                        <div class="row">
                                            <a id="pago" name="pago" href="/solicitud/pago/{{ idSolicitud }}" class="badge badge-success mx-auto">Registrar Pago</a>
                                        </div>
                                        
                                        <div class="row">
                                            <a id="cancelar" name="cancelar" href="/solicitud/cancelar/{{ idSolicitud }}" data-toggle="modal" data-target="#modalCancelar" class="mx-auto modalCancel badge badge-danger">Cancelar Solicitud</a>
                                        </div>
                                        <!-- Modal -->
                                        <div class="modal fade" id="modalCancelar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                          <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">CANCELAR SOLICITUD</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                  <span aria-hidden="true">&times;</span>
                                                </button>
                                              </div>
                                              <div class="modal-body">

                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <button type="button submit" class="btn btn-danger">Cancelar Solicitud</button>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                    </form>

                                </div>
                                {{else}}
                                    <a id="info" data-toggle="modal" href="/solicitud/" data-target="#modalInfo" name="info" class="customm badge badge-info">Mostrar Solicitud</a>
                                {{/if}}
                            </td>
                            <td>{{bordado}}</td>
                            <td>{{texto}}</td>
                            {{/each}}
                        </tr>
                        {{else}}
                            <div class="col-md-4 mx-auto">
                                <div class="card card-body text-center">
                                    <p>No Hay Solicitudes Activas</p>
                                    <a href="/solicitud/agregar" class="btn btn-outline-success">Realizar una Solicitud</a>
                                </div>
                            </div>
                            {{/if}}

                </tbody>
            </div>
            </div>
        </div>
        <script src="/static/js/scripts.js"></script>
        <script type="text/javascript">
        $(document).ready( function () {
            tabla();
        });
        </script>
        <script type="text/javascript">
        verDatos("modalAceptar", "custom-modal");verDatos("modalCancelar","modalCancel");verDatos("modalInfo","customm");

        </script>
        <script type="text/javascript">
        $('#tabla').on('click', function (e) {
            verDatos("modalInfo","customm");
        });
        </script>
