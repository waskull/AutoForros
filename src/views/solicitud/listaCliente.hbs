<div class="modal fade" id="modalInfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Informacion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
    <div class="row mt-2">
        {{#if solicitud}}
        <div class="mx-auto">
            <a href="/perfil" class="btn btn-outline-info btn-block">Volver</a>
                        <a href="/solicitud/agregar" class="btn btn-primary btn-block">AÃ±adir nueva Solicitud</a>
            <hr>
            <h3 class="text-center">Solicitudes</h3>
            <table id="tabla" class="table table-sm table-bordered table-hover text-justify">
                <thead>
                    <tr class="table">

                        <th>#</th>
                        <th>Placa</th>
                        <th>Estado</th>
                        <th>Tipo</th>
                        <th>Referencia</th>
                        <th>Material</th>
                        <th>Color</th>
                        <th>Cantidad</th>
                        <th>Fecha de Solicitud</th>
                        <th style="font-size: 12px;overflow: initial;text-overflow: initial;">Opciones</th>
                        <th>Bordado</th>
                        <th>Costura</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each solicitud}}
                        <tr>
                            <td name="{{idSolicitud}}">{{idSolicitud}}</td>
                            <td>{{placa}}</td>
                            <td>{{fase}}<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{progreso}}%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
</div>
                            </td>
                            <td>{{descPago}}</td>
                            <td>{{referencia}}</td>
                            <td>{{descrip}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{cantidad}}</td>
                            <td>{{timeago fechaSolicitud}} {{#if eta}}<br> ETA:{{eta}}h {{/if}}</td>
                            <td>
                                {{#if estado}}
                                    <form action="/solicitud/cancelar/{{idSolicitud}}" method="GET">
                                        <div class="row">
                                            <a id="pago" name="pago" href="/solicitud/pago/{{ idSolicitud }}" class="badge badge-success mx-auto">Registrar Pago</a>
                                        </div>
                                        <div class="row">
                                            <a id="cancelar" name="cancelar" href="/solicitud/cancelar/{{ idSolicitud }}" data-toggle="modal" data-target="#modalCancelar" class="mx-auto modalCancel badge badge-danger">Cancelar Solicitud</a>
                                        </div>
                                        <!-- Modal -->
                                        <div class="modal fade" id="modalCancelar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                          <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">CANCELAR SOLICITUD</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                  <span aria-hidden="true">&times;</span>
                                                </button>
                                              </div>
                                              <div class="modal-body">

                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <button type="button submit" class="btn btn-danger">Cancelar Solicitud</button>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                    </form>

                                </div>
                                {{else}}
                                
                                    <a id="info" data-toggle="modal" href="/solicitud/" data-target="#modalInfo" name="info" class="customm badge badge-info">Mostrar Solicitud</a>
                                
                                {{/if}}
                            </td>
                            <td>{{bordado}}</td>
                            <td>{{texto}}</td>
                            {{/each}}
                        </tr>
                        {{else}}
                            <div class="col-md-4 mx-auto">
                                <div class="card card-body text-center">
                                    <p>No Hay Solicitudes Activas</p>
                                    <a href="/solicitud/agregar" class="btn btn-outline-success">Realizar una Solicitud</a>
                                </div>
                            </div>
                            {{/if}}
