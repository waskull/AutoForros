<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
           <div class="card">
                <div class="card-body">
                    <form action="/vehiculos/editar/{{vehiculo.idAutomovil}}" method="POST">
                        <div class="form-group">
                            <h4>Editar Vehiculo</h4>
                        </div>
                    </div>
                            <div class="form-group">
                            <input type="text" value="{{vehiculo.placa}}" class="form-control" name="placa" placeholder="Placa" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehiculo.marca}}" class="form-control" name="marca" placeholder="marca" required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehiculo.modelo}}" class="form-control" name="modelo" placeholder="modelo"  required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehiculo.year}}" class="form-control" name="year" placeholder="AÃ±o" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
                        </div>
                        <div class="form-group">
                              <button class="btn btn-success btn-block" type="submit">Editar Vehiculo</button>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-light btn-block" type="reset" value="Reset">Borrar</button>
                        </div>
                    </form>
                </div>
           </div>
        </div>
    </div>
</div>
